<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

   <item android:top="@dimen/mainmenu_top">
        <shape android:shape="rectangle" >
            <corners android:topLeftRadius="@dimen/mainmenu_topleft_radius" 
                android:topRightRadius="@dimen/mainmenu_topright_radius"/>

            <gradient
                android:endColor="@color/menu_normal"
                android:startColor="@color/menu_normal"
                android:type="linear" />
        </shape>
    </item>
    <item android:left="@dimen/mainmenu_left"
        android:right="@dimen/mainmenu_right">
        <inset android:drawable="@drawable/icon_search_normal"
            android:insetLeft="@dimen/mainmenu_inset_left"
            android:insetRight="@dimen/mainmenu_inset_right"
            android:insetTop="@dimen/mainmenu_inset_top"
            android:insetBottom="@dimen/mainmenu_inset_bottom"/>
    </item>

    
</layer-list>