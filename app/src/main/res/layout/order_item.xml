<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="5dp" >

    <RelativeLayout
        android:id="@+id/order_infos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/tv_order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="订单编号:"
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/order_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_toRightOf="@id/tv_order_no"
            android:textSize="14sp"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/tv_order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_no"
            android:padding="2dp"
            android:text="下单时间："
            android:textColor="@color/black"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/order_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_no"
            android:padding="2dp"
            android:layout_toRightOf="@id/tv_order_time"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/handle_order"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_for_order_item"
            android:clickable="true"
            android:padding="3dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="订单跟踪"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/order_titles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/order_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="软件开发工程师"
            android:textColor="@color/black"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/order_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/order_title"
            android:text="职场导航科技"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:paddingRight="10dp"
            android:src="@drawable/arrow_right" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/price_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="总价:"
            android:textColor="#e46c0a"
            android:textSize="16sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/count"
            android:layout_toRightOf="@id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:padding="2dp"
            android:text="数量:"
            android:textColor="#e46c0a"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="等待付款"
            android:textColor="#e46c0a"
            android:layout_alignParentRight="true"
            android:textSize="16sp" />
        <TextView
            android:id="@+id/purchase"
            android:layout_below="@id/order_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/shape_for_order_item"
            android:clickable="true"
            android:padding="3dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="  去付款   "
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>