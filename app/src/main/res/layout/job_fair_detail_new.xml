<?xml version="1.0" encoding="utf-8"?>
<com.handmark.pulltorefresh.library.PullToRefreshScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/refreshScrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activity_bg1"
    android:orientation="vertical"
    android:padding="5dp" >
    
    <LinearLayout 
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:background="@color/activity_bg1"
    	android:orientation="vertical">
        <LinearLayout
        android:id="@+id/contentView"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="4"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/fairs_title_selector"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/fair_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dip"
                android:textColor="@color/white"
                android:textSize="@dimen/font_size_nomarl" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@drawable/wave" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_vertical"
            android:background="@color/white"
            android:paddingLeft="5dp"
            android:layout_weight="1" >
            <ImageView
            android:id="@+id/iv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:contentDescription="@drawable/fairs_status_ing"
            android:layout_marginRight="20dp" />
            <TextView 
                android:id="@+id/fair_category"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:gravity="center_vertical"
                android:textSize="@dimen/font_size_nomarl"
                android:text="@string/fair_category"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#f2f2f4" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:paddingLeft="5dp"
            android:background="@color/white"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_weight="1" >
             <ImageView 
                android:id="@+id/fair_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/fair_location"/>
            <TextView 
                android:id="@+id/fair_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/fair_location"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="40dp"
                android:textColor="#85858a"
                android:gravity="center_vertical"
                android:singleLine="true"/>
             <ImageView 
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/fair_go"/>
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#f2f2f4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5" 
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <ImageView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/fair_time"/>
            <TextView 
                android:id="@+id/fair_time"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:textColor="#85858a"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#f2f2f4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <Button
                android:id="@+id/view_the_process"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="16sp"
                android:textColor="#4e8ef3"
                android:background="@drawable/fair_button_selector"
                android:text="@string/view_the_process" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f2f2f4" />

            <Button
                android:id="@+id/more_recruitment_details"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:textColor="#4e8ef3"
                android:textSize="16sp"
                android:gravity="center"
                android:background="@drawable/fair_button_selector"
                android:layout_weight="1"
                android:text="@string/more_recruitment_details" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentView0"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="5dp"
        android:layout_weight="5"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/fair_sign_up"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:drawableTop="@drawable/fair_sign_up"
                android:paddingTop="10dp"
                android:background="@drawable/fair_button_selector"
                android:textSize="@dimen/font_size_nomarl"
                android:layout_weight="1"
                android:text="@string/sign_up" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f2f2f4" />

            <Button
                android:id="@+id/fair_sign"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/fair_button_selector"
                android:paddingTop="10dp"
                android:drawableTop="@drawable/fair_sign"
                android:textSize="@dimen/font_size_nomarl"
                android:text="@string/site_attendance"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#f2f2f4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/participants_position"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/fair_button_selector"
                android:paddingTop="10dp"
                android:drawableTop="@drawable/fair_position"
                android:textSize="@dimen/font_size_nomarl"
                android:text="@string/participants_position"
                android:layout_weight="1" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f2f2f4" />

            <Button
                android:id="@+id/participants_enterprises"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/fair_button_selector"
                android:drawableTop="@drawable/fair_enterprises"
                android:paddingTop="10dp"
                android:textSize="@dimen/font_size_nomarl"
                android:text="@string/participants_enterprises"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#f2f2f4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/sweep_resume"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/fair_button_selector"
                android:paddingTop="10dp"
                android:drawableTop="@drawable/fair_sweep"
                android:text="@string/sweep_resume"
                android:textSize="@dimen/font_size_nomarl"
                android:layout_weight="1" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f2f2f4" />

            <Button
                android:id="@+id/interview_results"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:background="@drawable/fair_button_selector"
                android:drawableTop="@drawable/fair_result"
                android:text="@string/interview_results"
                android:textSize="@dimen/font_size_nomarl"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:background="#f2f2f4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/real_time_data"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@drawable/fair_button_selector"
                android:paddingTop="10dp"
                android:drawableTop="@drawable/fair_real_data"
                android:text="@string/real_time_data"
                android:textSize="16sp"
                android:layout_weight="1" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#f2f2f4" />

            <Button
                android:id="@+id/enterprise_login"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:textSize="16sp"
                android:background="@drawable/fair_button_selector"
                android:drawableTop="@drawable/fair_enterprises_login"
                android:paddingTop="10dp"
                android:text="@string/enterprise_login"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

    

</com.handmark.pulltorefresh.library.PullToRefreshScrollView>