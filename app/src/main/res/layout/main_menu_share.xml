<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp">

    <View
        android:id="@+id/line"
        android:layout_width="0.3dp"
        android:layout_height="14dp"
        android:layout_centerInParent="true"
        android:layout_marginTop="8dp"
        android:background="@color/grey1" />

    <RelativeLayout
        android:id="@+id/shareLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/line"
        android:clickable="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:src="@drawable/grzx16" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_share"
            android:text="分享"
            android:textColor="@color/font_color"
            android:textSize="@dimen/menu_item_font_size" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/feedBackLl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/line"
        android:clickable="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_feedback"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="4dp"
            android:src="@drawable/grzx17" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/iv_feedback"
            android:text="反馈"
            android:textColor="@color/font_color"
            android:textSize="@dimen/menu_item_font_size" />
    </RelativeLayout>

</RelativeLayout>