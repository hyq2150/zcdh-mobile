<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/default_background"
    android:padding="5dp" >

    <LinearLayout
        android:id="@+id/account_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_current_email"
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:padding="5dp"
                android:text="当前Email:"
                android:textSize="@dimen/font_size_middle" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/listview_background"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="40dp"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="@string/current_pass"
                    android:textSize="@dimen/font_size_middle" />

                <EditText
                    android:id="@+id/current_pass"
                    style="@style/commom_text_field"
                    android:layout_width="0dip"
                    android:layout_height="40dp"
                    android:layout_weight="7"
                    android:ems="10"
                    android:hint="请输入登录密码"
                    android:inputType="textPassword"
                    android:password="true"/>
            </LinearLayout>

            <View
                android:id="@+id/divider1"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@drawable/divider_horizontal_timeline" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="0dip"
                    android:layout_height="40dp"
                    android:layout_weight="4"
                    android:gravity="right"
                    android:padding="5dp"
                    android:text="@string/new_email"
                    android:textSize="@dimen/font_size_middle" />

                <EditText
                    android:id="@+id/email1"
                    style="@style/commom_text_field"
                    android:layout_width="0dip"
                    android:layout_height="40dp"
                    android:layout_weight="7"
                    android:ems="10"
                    android:hint="请输入新email"
                    android:inputType="textEmailAddress" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>