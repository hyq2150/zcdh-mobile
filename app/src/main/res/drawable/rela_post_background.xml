<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <item>
        <shape android:shape="rectangle" >
            <corners android:radius="@dimen/skill_tag_radius" />

            <stroke
                android:width="@dimen/stroke_width"
                android:color="@color/tag_jingtong" />

            <gradient
                android:endColor="@color/tag_know"
                android:startColor="@color/tag_know" />
        </shape>
    </item>
    <item
        android:bottom="1dp"
        android:left="15dp"
        android:right="1dp"
        android:top="1dp">
        <shape android:shape="rectangle" >
            <corners
                android:bottomRightRadius="@dimen/skill_tag_radius"
                android:topRightRadius="@dimen/skill_tag_radius" />

            <gradient
                android:endColor="@android:color/white"
                android:startColor="@android:color/white" />
        </shape>
    </item>

</layer-list>