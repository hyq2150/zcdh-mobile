<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <corners android:bottomLeftRadius="10dip" />

            <gradient android:endColor="#50000000" android:startColor="#50000000" />
        </shape></item>
    <item android:state_enabled="false"><shape>
            <corners android:bottomLeftRadius="10dip" />

            <gradient android:endColor="#9d9d9d9d" android:startColor="#9d9d9d9d" />
        </shape></item>
    <item android:state_focused="true"><shape>
            <corners android:bottomLeftRadius="10dip" />

            <gradient android:endColor="#50000000" android:startColor="#50000000" />
        </shape></item>
    <item><shape>
            <corners android:bottomLeftRadius="10dip" />

            <gradient android:endColor="#00000000" android:startColor="#00000000" />
        </shape></item>

</selector>