<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" 
    android:gravity="center_vertical"
    android:padding="5sp">
    
    <TextView android:id="@+id/spicalNameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/font_color"
        android:textSize="@dimen/font_size_nomarl"
        />
    
    <TextView  android:id="@+id/wofuhe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:textColor="@color/font_color"
        android:textSize="@dimen/font_size_nomarl"
        android:text="我符合"/>
    
    <ImageView android:id="@+id/checkImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/wofuhe"
        android:src="@drawable/check_icon2"/>

</RelativeLayout>