        <shape android:shape="rectangle">
            <corners android:radius="3dp"/>
            <gradient android:startColor="#dcdcdc"
                android:endColor="#dcdcdc"/>
            <solid android:color="#dcdcdc"/>
            
        </shape>
    </item>

     <item >
