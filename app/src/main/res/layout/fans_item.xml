<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_grey_selector"
    android:padding="@dimen/content_left_right" 
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/headImg"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|left"
        android:src="@drawable/default_group" />
    
    <TextView android:id="@+id/noHeadTxt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center_vertical|left"
        android:textColor="@color/white"
        android:gravity="center"
        android:textStyle="bold"
        android:background="#FF7BAC"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/nameTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/content_left_right"
        android:layout_gravity="center_vertical"
        android:textColor="@color/font_color"
        android:textSize="@dimen/font_size_nomarl" />


</LinearLayout>