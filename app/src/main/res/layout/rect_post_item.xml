<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginTop="5dp"
    android:background="@drawable/list_item_silver_selector" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rect_listitem_bg"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/content_top_bottom"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="@dimen/content_top_bottom" >

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <!-- android:background="@drawable/list_item_silver_selector" -->

            <LinearLayout
                android:id="@+id/rltitle_and_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="7" >

                    <TextView
                        android:id="@+id/title"
                        style="@style/list_item_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="财务经理" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_weight="3" >

                    <TextView
                        android:id="@+id/publish_time"
                        style="@style/list_item_time"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:gravity="right"
                        android:text="publish time" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rlcontent_and_salary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rltitle_and_time"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="6.5" >

                    <TextView
                        android:id="@+id/content"
                        style="@style/list_item_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:maxLines="4"
                        android:text="赛米控电子(珠海)有限公司" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.5" >

                    <TextView
                        android:id="@+id/salary"
                        style="@style/list_item_salary_range"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:gravity="right"
                        android:text="5000~8000" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/rl_note_and_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rlcontent_and_salary"
                android:orientation="horizontal"
                android:paddingTop="5dp" >

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="8" >

                    <TextView
                        android:id="@+id/location_and_education"
                        style="@style/list_item_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="珠海/本科" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight="2" >

                    <TextView
                        android:id="@+id/distance"
                        style="@style/list_item_distance"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right|bottom"
                        android:gravity="right"
                        android:text="10KM" />
                </LinearLayout>
            </LinearLayout>

            <com.zcdh.mobile.app.views.TagsContainer
                android:id="@+id/ll_tags"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/rl_note_and_distance"
                android:layout_gravity="right"
                android:gravity="right"
                android:orientation="vertical"
                android:paddingLeft="@dimen/content_left_right"
                android:paddingRight="@dimen/content_left_right"
                android:paddingTop="@dimen/item_padding_top" />
        </RelativeLayout>

        <ImageView
            android:id="@+id/accessoryImg"
            style="@style/listview_accessory"
            android:layout_width="@dimen/accessory_with"
            android:layout_height="@dimen/accessory_height"
            android:layout_gravity="right|center_vertical"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/rl_delete"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_gravity="right|center_vertical"
             >

            <ImageView
                android:id="@+id/btn_delete"
                android:layout_width="@dimen/delImgWidth"
                android:layout_height="@dimen/delImgHeight"
                android:clickable="true"
                android:src="@drawable/img_cancel"
                android:visibility="visible" 
                android:layout_gravity="center"/>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>