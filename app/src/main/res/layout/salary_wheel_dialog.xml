<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:background="@drawable/layout_bg_holo"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

     <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:text="期望月薪"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_nomarl" />
    
    <LinearLayout
        android:layout_width="220dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <com.zcdh.mobile.app.views.wheel.WheelView
            android:id="@+id/minSalaryWheelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center_vertical"
            android:paddingBottom="6dp"
            android:paddingTop="6dp"
            android:singleLine="true"
            android:text="至"
            android:textColor="@color/white"
            android:textSize="@dimen/font_size_nomarl" />

        <com.zcdh.mobile.app.views.wheel.WheelView
            android:id="@+id/maxSalaryWheelView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/mianYiBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mianyi"
            android:textSize="@dimen/font_size_nomarl" />

        <Button
            android:id="@+id/okBtn"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="@string/sure"
            android:textSize="@dimen/font_size_nomarl" 
            />
    </LinearLayout>

</LinearLayout>