<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/activityBody1"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/feedBackEditText"
        android:layout_width="fill_parent"
        android:layout_height="180dp"
        android:background="@drawable/edittext"
        android:gravity="left|top"
        android:hint="@string/your_suggestion_makes_better_improvement"
        android:maxLength="100"
        android:padding="3dp"
        android:singleLine="false"
        android:textColor="@color/font_color"
        android:textSize="@dimen/font_size_nomarl" />

    <TextView
        android:id="@+id/havingLetterTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_gravity="right"
        android:gravity="right"
        android:text="请描述10-100字"
        android:textColor="@color/font_color"
        android:textSize="@dimen/font_size_nomarl" />

    <Button
        android:id="@+id/sendBtn"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_margin="30dp"
        android:background="@drawable/button_sub_bg"
        android:text="@string/submit"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_small" />

</LinearLayout>