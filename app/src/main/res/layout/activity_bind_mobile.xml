<?xml version="1.0" encoding="utf-8"?>
<LinearLayout style="@style/activityBody"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/dimen_10dp"
    android:paddingRight="@dimen/dimen_10dp">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/listview_background"
        android:paddingLeft="@dimen/content_left_right"
        android:paddingRight="@dimen/content_left_right">

        <EditText
            android:id="@+id/phoneNumEditText"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:drawablePadding="5dp"
            android:hint="请输入手机号码"
            android:inputType="phone"
            android:textColor="@color/font_color"
            android:textSize="@dimen/font_size_nomarl" />
    </LinearLayout>


    <Button
        android:id="@+id/getValidateCodeBtn"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_gravity="right"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:background="@drawable/btn_login"
        android:gravity="center"
        android:text="获取验证码"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_nomarl" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/listview_background"
        android:paddingLeft="@dimen/content_left_right"
        android:paddingRight="@dimen/content_left_right">

        <EditText
            android:id="@+id/validateCodeEditText"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:drawablePadding="5dp"
            android:hint="请输入验证码"
            android:inputType="number"
            android:textColor="@color/font_color"
            android:textSize="@dimen/font_size_nomarl" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/passwdRowLl"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/listview_background"
        android:paddingLeft="@dimen/content_left_right"
        android:paddingRight="@dimen/content_left_right">

        <EditText
            android:id="@+id/passwdEditText"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:drawablePadding="5dp"
            android:hint="请设置密码"
            android:inputType="textPassword"
            android:textColor="@color/font_color"
            android:textSize="@dimen/font_size_nomarl" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/passwdRowLl1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="-2dp"
        android:background="@drawable/listview_background"
        android:paddingLeft="@dimen/content_left_right"
        android:paddingRight="@dimen/content_left_right">

        <EditText
            android:id="@+id/confirmPasswdEditText"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:drawablePadding="5dp"
            android:hint="请确认密码"
            android:inputType="textPassword"
            android:textColor="@color/font_color"
            android:textSize="@dimen/font_size_nomarl" />
    </LinearLayout>

    <Button
        android:id="@+id/registerBtn1"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_login"
        android:text="提 交"
        android:textColor="@color/white"
        android:textSize="@dimen/font_size_middle" />

</LinearLayout>