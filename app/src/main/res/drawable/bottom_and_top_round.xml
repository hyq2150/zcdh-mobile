<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="90" android:endColor="@color/pressed" android:startColor="@color/pressed" />

            <stroke android:width="1dip" android:color="@android:color/darker_gray" />

            <corners android:radius="6dip" />
        </shape></item>
    <item android:state_pressed="false"><shape>
            <gradient android:angle="90" android:endColor="@android:color/white" android:startColor="@android:color/white" />

            <stroke android:width="1dip" android:color="@android:color/darker_gray" />

            <corners android:radius="6dip" />
        </shape></item>

</selector>