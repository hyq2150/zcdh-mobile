<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@drawable/message_item_selector"
    android:orientation="vertical"
     >

    <FrameLayout android:id="@+id/msg_icon_fl" 
        android:layout_width="50dp"
        android:layout_height="70dp"
        android:paddingTop="7dp"
        android:paddingBottom="7dp"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true">
        
        <ImageView
        android:id="@+id/msg_icon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center_vertical"
        android:src="@drawable/default_group" />
        
        <ImageView
        android:id="@+id/redPointImg"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:scaleType="centerInside"
        android:layout_gravity="right|top"
        android:src="@drawable/icon_red_point" />
        
        
    </FrameLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@id/msg_icon_fl"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/msg_icon_fl"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/tv_title"
                    style="@style/msg_title"
                    android:singleLine="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sdfklj" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_publish_time"
                style="@style/msg_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:text="今天" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_desc"
            style="@style/message_desc_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:visibility="gone"
            android:text="你有新消息！" />
    </LinearLayout>

</RelativeLayout>